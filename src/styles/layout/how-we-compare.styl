#howWeCompare
  .section__header
    text-align center

  table
    margin-top 40px
    margin-left auto
    margin-right auto
    width 100%
    max-width: 1170px;
    border-collapse: collapse;
    border-spacing: 0px;
    th, tr
      border-bottom: 1px solid rgb(191, 213, 238);
      vertical-align: top;
    th
      // font-weight 400 
      padding 12px
      font-size 20px
    td
      padding 12px
      text-align center
    .of
      background-color: rgb(204, 238, 250);
      font-weight 700
    .desc
      width 240px
      text-align right
      padding-right 32px
    .first
      border-radius: 20px 20px 0px 0px;
    .last
      border-radius: 0px 0px 20px 20px;