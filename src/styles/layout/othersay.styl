
#othersay
  .section__header
    text-align center
  .section__content
    margin-top 40px
    display grid
    grid-template-columns 1fr 1fr
    grid-gap 30px

    .quote
      background-color var(--color-light-air-100)
      padding 32px 40px
      &__text
        font-size 18px
        line-height 28px
      &__profile
        display flex
        align-items center
        gap 8px
        margin-top 16px
