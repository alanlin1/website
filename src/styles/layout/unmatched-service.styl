#unmatchedservice
  .section__wrapper
    wrapper-wide()
  .section__header
    margin-bottom 32px

  .section__subtitle
    margin-bottom 8px

  .section__description
    font-size: 18px;
    font-weight: 400;
    line-height: 24px

  .section__content
    display grid
    grid-template-columns 1fr 1fr 1fr
    gap 24px
    .service
      &__icon
        width 48px
        height 48px
        margin-bottom 16px
      &__title
        margin-bottom 8px
      &__text
        font-size: 16px;
        font-weight: 400;
        line-height: 24px
        letter-spacing 0.02em
